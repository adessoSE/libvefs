{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/master/docs/vcpkg.schema.json",
    "name": "vefs",
    "version-semver": "0.5.0",
    "homepage": "https://github.com/adessoSE/libvefs",
    "dependencies": [
        "base64",
        "boost-container",
        "boost-endian",
        "boost-exception",
        "boost-integer",
        "boost-intrusive",
        "boost-mp11",
        "boost-predef",
        "boost-preprocessor",
        "boost-throw-exception",
        "boost-type-traits",
        "boringssl",
        "concrete",
        "concurrentqueue",
        "deeplog",
        "deeppack",
        "fmt",
        "libb2",
        "libcuckoo",
        {
            "name": "llfio",
            "features": [ "status-code" ]
        },
        "outcome",
        "stduuid"
    ],
    "overrides": [
        {
            "name": "boringssl",
            "version-date": "2021-06-23",
            "port-version": 4
        }
    ],
    "features": {
        "cli": {
            "description": "Build the CLI",
            "dependencies": [
                "bfgroup-lyra",
                "boost-json"
            ]
        },
        "tests": {
            "description": "Build the test suite",
            "dependencies": [
                "boost-test",
                "catch2",
                "gtest"
            ]
        }
    }
}